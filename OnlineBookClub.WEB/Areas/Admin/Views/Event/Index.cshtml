@model EventVM

<div class="container">
    <h1>Create Event</h1>
    <div class="d-flex justify-content-between gap-5">
        <form method="post" asp-controller="Event" asp-action="Create">
            <div class="d-flex flex-column justify-content-center">
                <div class="mt-2" style="width: 600px;">
                    <div class="form-outline mb-4">
                        <select asp-for="ISBN" class="form-control p-3">
                            <option value="1ASDF">Nutuk</option>
                            <option value="2ASDF">Ateşten Gömlek</option>
                        </select>
                    </div>

                    <div class="form-outline mb-4">
                        <input asp-for="Title" class="form-control p-3" placeholder="Title" />
                    </div>

                    <div class="form-outline mb-4">
                        <select asp-for="LocationId" class="form-control p-3">
                            <option value="1">Okul Kütüphanesi</option>
                        </select>
                    </div>

                    <div class="form-outline mb-4">
                        <input asp-for="StartDate" value="@DateTime.Now" class="form-control" />
                    </div>

                    <input type="submit" class="btn btn-success w-100" value="Create" />
                </div>
            </div>
        </form>
        <span class="border" style="width: 2px;"></span>
        <div class="w-100 mt-2">
            <h3>Events</h3>
            <ul class="list-group">
                @foreach (var item in Model.Events)
                {
                    <li class="list-group-item list-group-item-action d-flex align-items-center justify-content-between w-100">
                        @item.Title

                        <div>
                            <a href="#" class="btn btn-danger">Sil</a>
                            <a href="#" class="btn btn-warning">Değiştir</a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>