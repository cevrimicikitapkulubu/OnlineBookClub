@model AdminStatisticsVM
<div class="container d-flex gap-5 ">


    <div class="d-flex gap-4 viewbagcard">
        <div>
            <p>Toplam Kullanıcı <br> Sayısı</p>
            <h1>@ViewBag.UsersCount</h1>
        </div>

        <div>
            <i class="fa-solid fa-users fa-5x"></i>
        </div>
    </div>

    <div class="d-flex gap-4  viewbagcard">
        <div>
            <p>Yapılmış Etkinlik <br> Sayısı</p>
        <h1>@ViewBag.EventsCount</h1>
        </div>

        <div>
            <i class="fa-solid fa-calendar-days fa-5x"></i>
        </div>
    </div>


    <div class=" d-flex gap-4  viewbagcard">
        <div>
            <p>Kapatılması Gereken <br> Etkinlikler</p>
            <h1>@ViewBag.EventsBeforeCurrentDate</h1>
        </div>

        <div>
            <i class="fa-solid fa-calendar-days fa-5x"></i>
        </div>
    </div>


    <div class="d-flex gap-4  viewbagcard">
        <div>
            <p>Aktif Etkinlik <br> Sayısı</p>
            <h1>@ViewBag.ActiveEventsCount</h1>
        </div>

        <div>
            <i class="fa-solid fa-calendar-days fa-5x"></i>
        </div>
    </div>


    <div class="d-flex gap-4  viewbagcard">
        <div>
            <p>Yönetici Kullanıcı <br> Sayısı</p>
            <h1>@Model.TotalAdmins</h1>
        </div>

        <div>
            <i class="fa-solid fa-user-tie fa-5x"></i>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="d-flex gap-5 justify-content-around">
        <div class="chart">
            <h2>Aylık Açılan Etkinlik Sayısı</h2>
            <canvas id="MonthlyEventArea" width="620" height="600"></canvas>
        </div>

        <div class="chart">
            <h2>Kullanıcı Cinsiyet Dağılımı</h2>
            <canvas id="GenderArea" width="620" height="600"></canvas>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/chart1.js"></script>
<script src="~/js/chart2.js"></script>

<style>
    .viewbagcard{
        padding:20px;
        width: 300px;
        height:140px;
        border-radius: 20px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    .viewbagcard h1{
        padding:0px;
        margin:0px;
    }

    .chart{
        padding:14px;
        width:620px;
        height:600px;
    }
</style>