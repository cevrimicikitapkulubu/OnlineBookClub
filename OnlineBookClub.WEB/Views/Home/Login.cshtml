@{
    ViewData["Title"] = "LogIn";
}
@model LogInVM
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<main class="row mt-5">
    <div class="col-md-4 offset-md-4">

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>

        <form asp-controller="Home" asp-action="LogIn" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" method="post">
            <h1 class="h3 mb-3 fw-normal">Giriş</h1>

            <div class="form-floating my-2">
                <input class="form-control" value="suspectcrow0@gmail.com" asp-for="Email" placeholder="name@example.com">
                <label asp-for="Email"></label>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-floating my-2">
                <input class="form-control" value="ExamplePass123*" asp-for="Password" placeholder="Password">
                <label asp-for="Password"></label>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" asp-for="RememberMe">
                <label class="form-check-label user-select-none" asp-for="RememberMe"></label>
            </div>
            <button class="btn btn-primary w-100 py-2" type="submit">Giriş Yap</button>
            <a class="float-end" asp-controller="Home" asp-action="ForgetPassword">Şifremi Unuttum</a>
        </form>
    </div>
</main>
