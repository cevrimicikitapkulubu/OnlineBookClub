
@{
    ViewData["Title"] = "PasswordChange";
}
@model PasswordChangeVM

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="form-signin m-auto col-6">
    <form asp-action="PasswordChange" method="post" class="d-flex flex-column gap-3 justify-content-center">
        <h1 class="h3 mb-3 fw-normal">Password Change</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-primary" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>

        <div class="form-floating">
            <input class="form-control" asp-for="PasswordOld" placeholder="Old Password">
            <label asp-for="PasswordOld"></label>
            <span class="text-danger" asp-validation-for="PasswordOld"></span>
        </div>
        <div class="form-floating">
            <input class="form-control" asp-for="PasswordNew" placeholder="New Password">
            <label asp-for="PasswordNew"></label>
            <span class="text-danger" asp-validation-for="PasswordNew"></span>
        </div>
        <div class="form-floating">
            <input class="form-control" asp-for="PasswordNewConfirm" placeholder="New Password Confirm">
            <label asp-for="PasswordNewConfirm"></label>
            <span class="text-danger" asp-validation-for="PasswordNewConfirm"></span>
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit">Change Password</button>
    </form>
</div>
