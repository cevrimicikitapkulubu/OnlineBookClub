
@{
    ViewData["Title"] = "UserEdit";
}
@model UserEditVM

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="form-signin m-auto col-6">
    <form asp-action="UserEdit" method="post" enctype="multipart/form-data" class="d-flex flex-column gap-3 justify-content-center">
        <h1 class="h3 mb-3 fw-normal">Update</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-primary" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>

        <div class="form-floating">
            <input class="form-control" asp-for="UserName" placeholder="Username">
            <label asp-for="UserName"></label>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="d-flex align-items-center jutify-content-between gap-2">
            <div class="form-floating w-100">
                <input class="form-control" asp-for="Firstname" placeholder="İsim">
                <label asp-for="Firstname"></label>
                <span class="text-danger" asp-validation-for="Firstname"></span>
            </div>
            <div class="form-floating w-100">
                <input class="form-control" asp-for="Lastname" placeholder="Soyad">
                <label asp-for="Lastname"></label>
                <span class="text-danger" asp-validation-for="Lastname"></span>
            </div>
        </div>
        <div class="form-floating">
            <input class="form-control" asp-for="Email" placeholder="name@example.com">
            <label asp-for="Email"></label>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-floating">
            <input class="form-control" asp-for="Phone" placeholder="Phone Number">
            <label asp-for="Phone"></label>
            <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
        <div class="form-floating">
            <input class="form-control" asp-for="SchoolNo" placeholder="Okul No">
            <label asp-for="SchoolNo"></label>
            <span class="text-danger" asp-validation-for="SchoolNo"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProfilePicture"></label>
            <input class="form-control" asp-for="ProfilePicture" accept="image/png, image/jpg, image/jpeg" placeholder="Profile Picture">
            <span class="text-danger" asp-validation-for="ProfilePicture"></span>
        </div>
        

        <button class="btn btn-primary w-100 py-2" type="submit">Update</button>
    </form>
</div>
